{
    "version": 2,
    "builds": [
        {
            "src": "db.json",
            "use": "@vercel/node",
            "config": {
                "IncludeFiles": ["db.json"]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "db.json"
        }
    ]
}
